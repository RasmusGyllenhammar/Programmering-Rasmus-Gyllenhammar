<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <children>
        <BorderPane prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1">
            <center>
                <Canvas fx:id="_canvas" height="600.0" width="800.0"/>
            </center>
            <left>
                <ColorPicker fx:id="_colorPicker" prefHeight="38.0" prefWidth="38.0"/>

            </left>
            <bottom>
                <Button mnemonicParsing="false" onAction="#onExitClick" text="Exit" BorderPane.alignment="CENTER"/>
            </bottom>
            <ToolBar prefHeight="40.0" prefWidth="200.0">
                <items>
                    <Button mnemonicParsing="false" onAction="#onClearClick" text="Clear"/>
                    <CheckBox fx:id="_eraser" text="Eraser"/>
                    <Slider fx:id="_slider" value="8.0" min="1.0" max="100.0"/>
                </items>


            </ToolBar>


        </BorderPane>
    </children>
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
</GridPane>
